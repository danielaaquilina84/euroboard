{
	  "rules": {
		".read": false,
		".write": false,
		// Semi final one data
		"semi-final-one": {
			".read": false,
			".write": false,
			".validate": true,
			"settings": {
				".read": true,
				".write": true,
				".validate": true,
				// Allowed fields
				"calculation": { ".validate": true },
				"layout": { ".validate": true },
				"messagesposition": { ".validate": true },
				"messagesshow": { ".validate": true },
				"messagetitle": { ".validate": true },
				"messagebody": { ".validate": true },
				"nowplaying": { ".validate": true },
				// Disallow all other fields
				"$other": { 
					".read": false,
					".write": false,
					".validate": false,
				},
			},
			"null": {
				".read": true,
				".write": true,
				".validate": true,
			},
			{% for entry in site.data.entries %}{% if entry.semi-final-one == "TRUE" %}{{ entry.code | append: '"' | prepend: '"' }}: {
				".read": true,
				".write": true,
				".validate": true,
				"count": { ".validate": true },
				"vote": { ".validate": true },
				"nowplaying": { ".validate": true },
				// Disallow all other fields
				"$other": { 
					".read": false,
